@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<link rel="stylesheet" href="~/css/equipes.css">

 <!-- MAIN -->
    <main>

        <section class="container-grid cadastro-equipes">

            @if (ViewBag.UserName == null)
            {
                <a
                asp-area= "navbar-brand" asp-controller= "Login" asp-action= "Index">
                Login
                </a>
    
            }else
            {
                <form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data" class="frm-cad-equipe">
                    <div class="cadequipe-titulo">
                        <h1>Cadastro de Equipes</h1>
                        <hr>
                    </div>

                                        
                    <input class="campo-entrada" type="text" name= "Nome" required placeholder="Digite o nome da sua equipe:">
                    
                    <label class="foto" for="foto-file">
                        Nenuma imagem selecionada...
                    <input  type="file" name="Imagem" id="foto-file">
                    </label>
                
                    <button type="submit">Cadastro</button>
                
                
                
                </form>

                <!-- TABELA CADASTRO DE EQUIPES -->

                <table class= "table table-striped table-responsive" >
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>Foto</th>
                            <th>Excluir</th>
                            <th>Editar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Equipe equipe in ViewBag.Equipe)
                        {
                            <tr>
                                <td>@equipe.IdEquipe</td>
                                <td>@equipe.Nome</td>
                                @* <td><img class="green-play" src="~/assets/green-play.svg" alt=""></td> *@
                                <td><img class="" src="/img/Equipes/@equipe.Imagem" alt="imagem da equipe @equipe.Nome" width="50px"></td>
                                <td>
                                <a asp-area="Excluir a equipe selecionada" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"><img class="green-play" src="~/assets/trash.png" alt=""></a>
                                </td>

                                <td>
                                <a asp-area="Edita a equipe selecionada" asp-controller="Equipe" asp-action="Editar" asp-route-id = "@equipe.IdEquipe"><img class="green-play" src="~/assets/lapis.png" alt=""></a>
                                </td>
                            </tr>
                           
                        }
                    </tbody>
                </table>
            }
            
        </section>
    </main>        

