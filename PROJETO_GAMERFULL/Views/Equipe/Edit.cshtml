@model Equipe

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/equipes.css">

<main>
    <section class="container-grid cadastro-equipes">

    @if (ViewBag.UserName == null)
    {
        <a  asp-area= "" asp-controller = "Login" asp-action= "Index">
            Login
        </a>
    
    } 
    else
    {
        @* Se estiver logado *@

        <form method="post" class="frm-cad-equipe"  action="@Url.Action("Atualizar")" enctype="multipart/form-data">
                    <div class="cadequipe-titulo">
                        <h1>Edição de Equipe</h1>
                        <hr>
                    </div>

            @*  hidden deixa o input invisivel *@
            <input type="hidden" name= "IdEquipe" value="@ViewBag.Equipe.IdEquipe">
    
            <input name = "Nome" class="campo-entrada" type="text"    placeholder="Digite o nome da sua equipe: " required>

            <label class="foto" for="foto-file">
                Nenhuma imagem selecionada...
                <input type="file" name="Imagem" id="foto-file">
            </label>
    
            <button type="submit">Atualizar</button>

        </form>
    }
    </section>
</main>